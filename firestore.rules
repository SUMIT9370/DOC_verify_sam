
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper: requestor owns the path's userId
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Robust isAdmin check: only true if the user doc exists and has isAdmin == true
    function isAdmin() {
      if (!isSignedIn()) { return false; }
      let u = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && u.data.isAdmin == true;
    }

    /**
     * USERS collection
     * - Clients can create their own profile but cannot set isAdmin to true.
     * - Clients can update their own profile but cannot change the isAdmin field.
     */
    match /users/{userId} {
      // Anyone signed in can create their own profile BUT isAdmin must not be true in request.
      allow create: if isSignedIn()
                    && request.auth.uid == userId
                    && ( !(request.resource.data.keys().hasAny(['isAdmin'])) // no isAdmin field
                         || request.resource.data.isAdmin == false );

      // Owner can read own doc. Admins can list all users (for stats).
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // <-- Allow admins to list users for stats count

      // Owner can update their doc but cannot change isAdmin
      allow update: if isOwner(userId)
                    && resource.data.isAdmin == request.resource.data.isAdmin; // cannot toggle isAdmin

      // Owner can delete own profile (optional; consider server-side delete rules if needed)
      allow delete: if isOwner(userId);

      // verification_history: user writes, owner or admin reads
      match /verification_history/{historyId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId);
      }
    }

    /**
     * document_masters
     * - Only admins can manage templates.
     * - On create, ensure creatorUid matches request.auth.uid (optional).
     */
    match /document_masters/{masterId} {
      allow read, list: if isAdmin();

      // Create: admin only, and creatorUid must equal auth.uid if present.
      allow create: if isAdmin()
                    && ( !('creatorUid' in request.resource.data) || request.resource.data.creatorUid == request.auth.uid );

      // Update & delete: admin only.
      allow update, delete: if isAdmin();
    }

    /**
     * admin_dashboards: admin-only collection
     */
    match /admin_dashboards/{dashboardId} {
      allow read, write: if isAdmin();
    }

    /**
     * verification_history (collection group)
     * - Admins can read (list) histories from all users.
     */
    match /{path=**}/verification_history/{historyId} {
      allow read: if isAdmin();
    }
  }
}
