rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to write to their own user-specific folder.
    // The path should be /user_uploads/{userId}/{fileName}
    match /user_uploads/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow reads only by the user who owns the files.
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
