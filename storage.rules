rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file path that starts with user_uploads/
    match /user_uploads/{userId}/{allPaths=**} {
      // Allow read and write operations if the user is authenticated and their uid matches the {userId} in the path.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
