
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the user_uploads directory
    match /user_uploads/{userId}/{allPaths=**} {
      // Allow read and write access only if the user's ID matches the directory name
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
